<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:id="@+id/cardView2"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <!--<ImageView
                android:id="@+id/shareImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY" />-->

            <EditText
                android:id="@+id/hashtagText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:drawable/screen_background_light_transparent"
                android:ems="10"
                android:focusable="false"
                android:inputType="textMultiLine"
                android:paddingBottom="60dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp" />

            <Button
                android:id="@+id/bookmark"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/hashtagText"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"

                android:background="@mipmap/ic_bookmark_border_black_24dp"
                android:backgroundTint="#cd486b" />

            <Button
                android:id="@+id/facebookshare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/bookmark"
                android:layout_marginStart="48dp"
                android:background="@drawable/facebook"
                android:backgroundTint="#3b5998"
                android:visibility="invisible" />

            <Button
                android:id="@+id/instagramshare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/bookmark"
                android:layout_marginStart="10dp"
                android:background="?attr/actionModeShareDrawable"
                android:backgroundTint="#cd486b" />

            <Button
                android:id="@+id/twittershare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/bookmark"
                android:layout_marginStart="33dp"
                android:layout_toEndOf="@+id/instagramshare"
                android:background="@drawable/twitter"
                android:backgroundTint="#0084b4"
                android:visibility="invisible" />

        </RelativeLayout>





        <!-- <ImageButton
             android:id="@+id/walmartImageButton"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_centerHorizontal="true"
             android:layout_gravity="center_horizontal"
             android:adjustViewBounds="true"
             android:cropToPadding="false"
             android:padding="-5dp"
             android:scaleType="fitXY"
             app:srcCompat="@drawable/placeholder" />-->


    </android.support.v7.widget.CardView>



</RelativeLayout>
